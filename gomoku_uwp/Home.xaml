<Page
    x:Class="gomoku_uwp.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:gomoku_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Unloaded="Page_Unloaded"
    >

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="chessboard_mother" Margin="20,0,0,0" Grid.Column="0">
            <Viewbox Stretch="Uniform">
                <Grid Name="chessboard_father">
                    <Rectangle Stroke="Black" Stretch="Fill" Canvas.Left="10" Canvas.Top="10" Margin="10,10,10,10"  Fill="#FF9A9A9B" Name="chessboard_background" Height="1600" Width="1600" PointerReleased="chessboard_background_PointerReleased"/>
                </Grid>
            </Viewbox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="211*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="380*"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Row="0" Background="LightGray" Margin="10,0,10,0">
                <TextBlock Text="Game Status" Canvas.Top="10" Canvas.Left="10"/>
            </Canvas>
            <Canvas Grid.Row="1" Margin="10,0,10,0">
                <TextBlock Text="Black: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Canvas.Top="10" Canvas.Left="10" Name="BlackLabel"/>
                <TextBlock Text="White: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Canvas.Top="50" Canvas.Left="10" Name="WhiteLabel"/>
                <TextBlock Text="Mode: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Canvas.Top="90" Canvas.Left="10" Name="ModeLabel"/>
                <TextBlock Text="Eval: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Canvas.Top="130" Canvas.Left="10" Name="EvalLabel"/>
            </Canvas>
            <Canvas Grid.Row="2" Background="LightGray" Margin="10,0,10,0">
                <TextBlock Text="Game Control" Canvas.Left="10" Canvas.Top="10"/>
            </Canvas>
            <Canvas Grid.Row="3" Margin="10,0,10,0">
                <Button Content="Undo" Canvas.Left="10" Canvas.Top="20" Width="75" Name="UndoButton"/>
                <Button Content="Restart" Canvas.Left="10" Canvas.Top="60" Width="75" Name="RestartButton"/>
                <Button Content="Dump" Canvas.Left="10" Canvas.Top="100" Width="75" Name="DumpButton"/>
                <Button Content="Quit" Canvas.Left="10" Canvas.Top="140" Width="75" Name="QuitButton"/>
            </Canvas>
        </Grid>
    </Grid>
</Page>
