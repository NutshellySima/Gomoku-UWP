<Page
    x:Class="gomoku_uwp.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:gomoku_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Unloaded="Page_Unloaded"
    >

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="chessboard_mother" Margin="20,0,0,0" Grid.Column="0">
            <Viewbox Stretch="Uniform">
                <Grid Name="chessboard_father">
                    <Rectangle Stroke="Black" Stretch="Fill" Canvas.Left="10" Canvas.Top="10" Margin="10,10,10,10"  Fill="#FF9A9A9B" Name="chessboard_background" Height="1600" Width="1600" PointerReleased="chessboard_background_PointerReleased"/>
                </Grid>
            </Viewbox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="300*"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Row="0" Background="LightGray" Margin="10,0,10,0">
                    <TextBlock Text="Game Status" VerticalAlignment="Center" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="10" x:Uid="Status_bar" Foreground="Black"/>
            </Canvas>
                <Grid Grid.Row="1" Margin="10,0,10,0">
                    <TextBlock Text="Black: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,20,0,0" Name="BlackLabel" x:Uid="Black_lab"/>
                    <TextBlock Text="White: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,60,0,0" Name="WhiteLabel" x:Uid="White_lab"/>
                    <TextBlock Text="Mode: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,100,0,0" Name="ModeLabel" x:Uid="Mode_lab"/>
                <TextBlock Text="Eval: " HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,140,0,0" Name="EvalLabel" x:Uid="Eval_lab"/>
            </Grid>

            <Canvas Grid.Row="2" Background="LightGray" Margin="10,0,10,0">
                        <TextBlock Text="Game Control" Canvas.Left="10" Canvas.Top="10" x:Uid="Control" Foreground="Black"/>
                    </Canvas>
            <Canvas Grid.Row="3" Margin="10,0,10,0">
                <Button Content="Undo" Canvas.Left="10" Canvas.Top="20" Width="75" Name="UndoButton" Click="UndoButton_Click" x:Uid="Undo_But"  Style="{StaticResource ButtonRevealStyle}">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <TextBlock Name="Undo_Text"/>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </Button>
                <Button Content="Restart" Canvas.Left="10" Canvas.Top="60" Width="75" Name="RestartButton" Click="RestartButton_Click" x:Uid="Restart_But" Style="{StaticResource ButtonRevealStyle}"/>
                <Button Content="Dump" Canvas.Left="10" Canvas.Top="100" Width="75" Name="DumpButton" Click="DumpButton_Click" x:Uid="Dump_But" Style="{StaticResource ButtonRevealStyle}">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <TextBlock Name="Dump_Text"/>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </Button>
            </Canvas>
        </Grid>
    </Grid>
</Page>
